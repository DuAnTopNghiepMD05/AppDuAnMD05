<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        style="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/danhmuc_tvAo"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/pants"
        android:text="Áo"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/danhmuc_tvQuan"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/quans"
        android:text="Quần"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/danhmuc_tvKhac"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/quanao1"
        android:text="Khác"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginVertical="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvDanhMuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>