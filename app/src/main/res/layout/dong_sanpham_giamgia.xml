<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="28dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hinhanh"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_corners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleX="1"
        android:src="@drawable/giamgia"
        app:layout_constraintBottom_toBottomOf="@+id/hinhanh"
        app:layout_constraintEnd_toEndOf="@+id/hinhanh" />

    <TextView
        android:gravity="center"
        android:id="@+id/txttensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:padding="1dp"
        android:text="Áo nam"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/hinhanh"
        app:layout_constraintTop_toBottomOf="@+id/hinhanh"
        app:layout_constraintEnd_toEndOf="@+id/hinhanh" />

    <TextView
        android:id="@+id/txtgiatien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:padding="6dp"
        android:text="255.555 Đ"
        android:textColor="#EC0453"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txttensp"
        app:layout_constraintTop_toBottomOf="@+id/txttensp"
        app:layout_constraintEnd_toEndOf="@+id/txttensp" />

</androidx.constraintlayout.widget.ConstraintLayout>
